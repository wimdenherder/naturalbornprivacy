{
  "name": "Natural Born Privacy",
  "description": "Make the current page unreadable unless you read it through red glasses",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": { 
    "16": "images/icon.png",
    "128": "images/icon-big.png" 
  },
  "web_accessible_resources": [
    "images/*.png",
    "styles/*.css",
    "styles.json"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Natural Born Privacy",
    "default_icon": "images/icon.png"
  },
  "manifest_version": 2
}